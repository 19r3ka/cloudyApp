<!-- Form for rename -->

<%= form_for(@cloud_file, {url: rename_user_cloud_account_path, html: {class: "form-inline", role: "form"}}) do |f| %>
  <%= content_tag :div, class: "form-group" do %>
    <%= f.hidden_field :fops, value: @form_action %>
    <%= f.hidden_field :caid, value: @cloud_file.cloud_account_id %>
	  <%= f.hidden_field :identifier, value: @cloud_file.identifier %>
    <%= f.hidden_field :dir, value: @cloud_file.is_dir %>
	  <%= f.text_field :name, value: @cloud_file.name, class: "form-control" %>
	  <%= f.submit("rename", class: "form-control btn-default") %>
	<% end %>
<% end %>
