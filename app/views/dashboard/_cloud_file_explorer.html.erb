<% title = @cloud_file.nil? ? "Welcome!" : File.basename(@cloud_file.path, ".*") %>
<% provide(:title, title) %>
<div class="cloud_file_explorer">
  <% @cloud_files.in_groups_of(3, false) do |row| %>
	<div class="row">
	<% row.each do |cloud_file| %>
	  <div class="col-md-4">
	    <%=  render cloud_file %>
      </div>
    <% end %>
    </div>
  <% end unless !@cloud_files%>
</div>
